pipeline {
    agent any
    stages {
		stage ('Clone') {
        	checkout scm
        }
        stage('Build') {
            steps {
                echo 'This is when condition demo'
            }
        }
        stage('Deploy') {
            when {
                branch '*/master'
				environment name: 'DEPLOY_TO', value: 'production'
            }
            steps {
                echo 'Deploying from production'
            }
        }
    }
}
