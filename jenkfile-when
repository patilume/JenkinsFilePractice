pipeline {
    agent any
    stages {
		stage ('Clone') {
			steps{
				checkout scm
			}
        }
        stage('Build') {
            steps {
                echo 'This is when condition demo'
            }
        }
        stage('Deploy') {
            when {
				allOf {
					branch 'origin/master'
					environment name: 'DEPLOY_TO', value: 'production'
				}
            }
            steps {
                echo 'Deploying from production'
            }
        }
    }
}
