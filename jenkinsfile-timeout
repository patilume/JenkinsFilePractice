//a execution timeout of one hour for the Example stage, after which Jenkins will abort the Pipeline run.

pipeline {
    agent any
    stages {
        stage('Example') {
            options {
                timeout(time: 1, unit: 'HOURS') 
            }
            steps {
                echo 'Hello World'
            }
        }
    }
}
